load_image_resource () {
    index=$1
    resource=$2

    builtin printf "\e_Gi=$index,f=100,a=t,q=1,t=f;$(echo -n "$DESKTOP_PATH/resources/$resource" | base64)\e\\"
}

print_image () {
    index=$1
    width=$2
    builtin printf "\e_Ga=p,i=$index,q=1,c=$width,r=1\e\\"
}

