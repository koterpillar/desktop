#!/bin/bash

set -euo pipefail

/bin/bash -c "$(curl -fsSL https://github.com/koterpillar/mybox/releases/latest/download/bootstrap)" bash --haskell

if [[ $HOSTNAME =~ DQ94 ]]
then
  if ! [ -d local ]
  then
    git clone git@bitbucket.org:akotlyarov-atlassian/local.git
  fi
fi

# PATH for tools might not be picked up yet
export PATH="$HOME/.local/bin:$PATH"

mybox "$@"
