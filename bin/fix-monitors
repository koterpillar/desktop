#!/bin/sh -e

case $(hostname) in
	shancha)
		xrandr --auto
		if xrandr | grep -q "HDMI1 connected"
		then
			xrandr --output HDMI1 --primary --mode 1920x1080 --above LVDS1
			pactl set-card-profile 0 output:hdmi-stereo
		elif xrandr | grep -q "HDMI2 connected"
		then
			xrandr --output HDMI2 --primary --mode 1920x1080 --above LVDS1
			pactl set-card-profile 0 output:hdmi-stereo-extra1
		else
			pactl set-card-profile 0 output:analog-stereo
		fi
	;;
	devs-alexey)
		xrandr --output DVI-1 --auto --right-of DVI-0
	;;
	mujin)
		xrandr --auto
		if xrandr | grep -q "DP-0 connected"
		then
			xrandr --output DP-0 --mode 1920x1080 --pos 0x0 --rotate normal --primary --output LVDS-0 --mode 1280x800 --pos 1920x540 --rotate normal
		else
			xrandr --output LVDS-0 --mode 1280x800
		fi
	;;
esac
killall tianbar || true
tianbar &
. ~/.fehbg
