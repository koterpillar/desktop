[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[diff]
    tool = difftastic

[difftool]
    prompt = false

[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"

[pager]
    difftool = true

[user]
    name = Alexey Kotlyarov
    email = a@koterpillar.com

[init]
    defaultBranch = main

[pull]
    ff = only

[push]
    default = simple
    autoSetupRemote = true

[color]
    ui = auto

[alias]
    taga = !git tag -a -m $1
    prune-tags = fetch --prune origin '+refs/tags/*:refs/tags/*'
    showtool = "!showci () { rev=${1:-HEAD}; git difftool $rev~1 $rev; }; showci $1"

[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f

[filter "fcitx-config"]
    clean = fcitx-config-clean
    smudge = cat

[tig]
    line-graphics = utf-8

[url "ssh://git@github.com"]
    pushInsteadOf = https://github.com
    pushInsteadOf = git://github.com

[url "ssh://git@bitbucket.org"]
    pushInsteadOf = https://bitbucket.org
    pushInsteadOf = git://bitbucket.org

[github]
    user = koterpillar

[delta]
    syntax-theme = GitHub

[includeIf "hasconfig:remote.*.url:git@bitbucket.org:atlassian/**"]
    path = ~/.config/git/config-atlassian

[includeIf "hasconfig:remote.*.url:git@bitbucket.org:akotlyarov-atlassian/**"]
    path = ~/.config/git/config-atlassian
